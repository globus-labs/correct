{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "lib": ["es2022", "es2023", "es2024"],
    "allowJs": false
  },
  "exclude": [
    "__fixtures__",
    "__tests__",
    "coverage",
    "dist",
    "node_modules",
    "site"
  ],
  "include": ["src"]
}
